{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "uuid": {
      "type": ["string"]
    },
    "speakers": {
      "type": ["null", "array"],
      "items": {
        "type": "object",
        "properties": {
          "email": {
            "type": ["string"]
          },
          "id": {
            "type": ["integer"]
          },
          "is_rep": {
            "type": ["boolean"]
          },
          "name": {
            "type": ["null", "string"]
          }
        }
      }
    },
    "transcript": {
      "type": ["null", "array"],
      "items": {
        "type": "object",
        "properties": {
          "speaker_id": {
            "type": ["integer"]
          },
          "timestamps": {
            "type": ["array"],
            "items": {
              "type": ["number"],
              "format": "float"
            }
          },
          "transcript": {
            "type": ["string"]
          }
        }
      }
    }
  }
}
